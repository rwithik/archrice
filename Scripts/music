#!/bin/bash

case $(echo -en "Artists\nMood\nRandomly Play Everything" | dmenu -l 3) in 
	"Randomly Play Everything")
		mpv --shuffle "/home/rwithik/Music/Everything.m3u"
		;;
	Artists)
		mpv --shuffle "/home/rwithik/Music/$(echo -en 'Alan Walker\nThe Chainsmokers\nMarshmello' | dmenu -l 3).m3u"
		;;
#	Genre)
#		mpv --shuffle "/home/rwithik/Music/$(echo -en 'Alan Walker\nSad' | dmenu -l 3).m3u"
#		;;
	Mood)
		mpv --shuffle "/home/rwithik/Music/$(echo -en 'Sad' | dmenu -l 3).m3u"
		;;
esac

label-active =  "  o  "
label-occupied = "  *  "
label-empty = "  -  "
label-empty-background = ${colors.inactive}
format-background = ${colors.inactive}

[module/date]
type = internal/date
interval = 5

date =
date-alt = " %d/%m/%Y"

time = %I:%M %p
time-alt = %I:%M %p

format-prefix = 
format-prefix-foreground = ${colors.foreground-alt}
format-padding = 2
format-background = ${colors.inactive}

label = %date% %time%

